#!/usr/bin/env node

/**
 * Ralph CLI Executable
 * 
 * This is the CLI entry point that gets installed as 'ralph' command.
 * It uses tsx to run TypeScript directly without compilation.
 */

import { spawn } from 'node:child_process';
import { fileURLToPath } from 'node:url';
import { dirname, join } from 'node:path';

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

const entryPoint = join(__dirname, '..', 'src', 'index.tsx');

// Spawn tsx to run the TypeScript entry point
const child = spawn('npx', ['tsx', entryPoint, ...process.argv.slice(2)], {
  stdio: 'inherit',
  shell: true,
});

child.on('close', (code) => {
  process.exit(code ?? 0);
});
